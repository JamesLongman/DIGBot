{
  "extends": "airbnb-base",
  "env"    : {
    "mocha": true
  },
  "rules"  : {
    "indent"                : [
      2,
      4
    ],
    "max-len"               : [
      1,
      120
    ],
    "no-plusplus"           : "off",
    "no-empty-function"     : "off",
    "no-use-before-define": ["error", { "functions": false, "classes": true, "variables": true }],
    "guard-for-in"          : "off",
    "no-restricted-syntax"  : "off",
    "class-methods-use-this": "off"
  }
}
