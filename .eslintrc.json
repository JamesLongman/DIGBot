{
  "extends": "airbnb-base",
  "env"    : {
    "mocha": true
  },
  "rules"  : {
    "indent"                : [
      2,
      4
    ],
    "max-len"               : [
      1,
      120
    ],
    "no-plusplus"           : "off",
    "guard-for-in"          : 0,
    "no-restricted-syntax"  : 0,
    "class-methods-use-this": "off"
  }
}
